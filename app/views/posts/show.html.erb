<h1>投稿詳細</h1>


<%= link_to user_path(@post.user.id) do %>
<%= attachment_image_tag @post.user, :icon_image, fallback: "no_image.png" %>
<% end %>

<%= link_to user_path(@post.user) do %>
    <%= @post.user.name %>
<% end %>

<%= @post.date %>

<%= @post.meal_content %>

<%= @post.training_content %>

<%= @post.weight %>

<div id="favorite_buttons_<%= @post.id %>">
　　　<%= render 'favorites/favorite', post: @post %>
</div>



<% if @post.user.id == current_user.id %>
    <%= link_to "編集", edit_post_path(@post) %>
<% end %>

<% @comments.each do |comment| %>
    <%= comment.comment_content %><br>
    <% if current_user.id == comment.user.id %>
    <%= link_to "削除", post_comments_path(post_id: @post.id, id: comment.id), method: :delete, data: {confirm: "削除しますか？"} %><br>
    <% end %>
<% end %>
<%= form_for [@post, @comment] do |f| %>
    <%= f.label :コメント %>
    <%= f.text_area :comment_content %>
    
    <%= f.submit 'コメントする' %>
<% end %>

