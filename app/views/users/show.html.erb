<h1>Users#show</h1>
<p>ユーザー詳細</p>
<%= attachment_image_tag @user, :icon_image, fallback: "no_image.png" %>
<%= @user.name %>
<% if @user.id == current_user.id %>
<%= @user.email %>
<% end %>
<%= @user.age.to_s + "歳" %>
<%= @user.gender %>
<%= @user.height %>
<%= @user.weight %>


<% if @user.id == current_user.id %>
<%= link_to "プロフィール編集", edit_user_path(@user) %>
<% end %>
<br>
<% @user.posts.each do |post|%>
<%= post.date %>

<%= post.meal_content %>

<%= post.training_content %>

<%= post.weight %>

いいね<%= post.favorites.count %>

<% if @user.id == current_user.id %>
<%= link_to "編集", edit_post_path(post) %>

<%= link_to "削除", post_path(post), method: :delete, data: {confirm: "削除しますか？"} %>
<% end %>

<br>

<% end %>
